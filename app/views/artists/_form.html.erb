<div class="row">

    <%=form_for @artist do |f| %>

  <div>
      <%= f.label :artist_name %>
      <%= f.text_field :artist_name %>

  </div>

    <div>
      <%= f.label :artist_image %>
      <%= f.file_field :artist_image, type: :file, multiple: false %>
    </div>

    <div>
      <%= f.submit (@artist.new_record? ? "Create" : "Update") %>
      <%end%>
    </div>

  </div>
