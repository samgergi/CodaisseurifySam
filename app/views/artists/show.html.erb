<div class="row">
  <h1>Songs for <%= @artist.artist_name %></h1>
  <%= link_to "Edit artist", edit_artist_path(@artist) %>

  <div>
    <%= image_tag @artist.artist_image %>
  </div>
  <ul>

    <div>
      <h2>All songs from this artist</h2>
    </div>

    <% @artist.songs.each do |song| %>
    <li>
      <%= song.song_name %> <%= link_to "Delete Song", song_path(song), method: :delete, data: {confirm: "Are you sure you want to delete this song?"} %>
    </li>
    <% end %>
    <li>
      <%= render 'songs/form' %>
    </li>



  </ul>
  <%= link_to "All Artists", root_path %>
</div>
